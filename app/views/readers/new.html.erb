<h1>Sign up</h1>

<%= form_for @reader do |f| %>
  <%= render 'shared/error_messages', object: f.object %><br>

  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :email %>
  <%= f.email_field :email %><br><br>
  
  <%= f.label :title, 'Comics' %>
  <%= f.collection_check_boxes(:comic_ids, Comic.all, :id, :title) do |b| %>
  <p><%= b.label(:"data-value" => b.value) { b.check_box + b.text } %></p>
  <% end %>
  </p>

  <%= f.label :password %>
  <%= f.password_field :password %><br><br>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.submit %>
<% end %>